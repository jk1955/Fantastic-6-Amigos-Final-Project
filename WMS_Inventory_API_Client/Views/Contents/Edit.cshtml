@model WMS_Inventory_API_Client.Models.Content

@{
    ViewData["Title"] = "Edit";
}

<h4>@TempData["Message"]</h4>

<h4>@TempData["returnUrl"]</h4>

<h1>Edit</h1>

<h4>Content</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                Container
                <select asp-for="ContainerId" class="form-control" asp-items="ViewBag.ContainerId"></select>
                <span asp-validation-for="ContainerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@TempData["returnUrl"]">Back</a>
    <br />
    <a style="color: blue" asp-controller="Container"
       asp-action="Index">Container Index</a>
    <br />
    <a style="color: blue" asp-controller="Contents"
       asp-action="Index">Contents Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
