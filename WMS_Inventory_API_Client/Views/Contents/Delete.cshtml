@model WMS_Inventory_API_Client.Models.Content

@{
    ViewData["Title"] = "Delete";
}

<h4>@TempData["Message"]</h4>

<h4>@TempData["returnUrl"]</h4>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Content</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContainerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContainerId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <div>
            <a href="@TempData["returnUrl"]">Back</a>
            <br />
            <a style="color: blue" asp-controller="Container"
               asp-action="Index">Container Index</a>
            <br />
            <a style="color: blue" asp-controller="Contents"
               asp-action="Index">Contents Index</a>
        </div>
    </form>
</div>
