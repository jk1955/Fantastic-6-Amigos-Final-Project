@model WMS_Inventory_API_Client.Models.Container

@{
    ViewData["Title"] = "Details";
}
<h4>@TempData["Message"]</h4>

<h1>Details</h1>

<div>
    <h4>Container</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StorageLocation.LocationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StorageLocation.LocationName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<br />
<h4>Contents List</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Quantity
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.content)
        {
            <tr>
                <td>

                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>

                    <a style="color: indianred" asp-controller="Contents"
                       asp-action="Edit"
                       asp-route-id="@item.Id">Edit</a>

                    <a style="color: indianred" asp-controller="Contents"
                       asp-action="Details"
                       asp-route-id="@item.Id">Details</a>

                    <a style="color: indianred" asp-controller="Contents"
                       asp-action="Delete"
                       asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
    <br />
    <a style="color: blue" asp-controller="Contents"
       asp-action="Index">Contents Index</a>
</div>